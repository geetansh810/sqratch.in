---
import "@/styles/event.css";
import BaseLayout from "@/layouts/BaseLayout.astro";
import NewsSection from "@/components/sections/News.astro";
import Container from "@/components/primitives/Container.astro"
import { getData } from "./api/dataFetch";

const data = getData("competitions");
---

<script is:browser type="module">
  import SplitType from 'split-type';
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  (async () => {
    const { default: Typed } = await import('typed.js');

    window.addEventListener("DOMContentLoaded", () => {
      gsap.registerPlugin(ScrollTrigger);

      new Typed(".titletext", {
        strings: ["", "creators.", "editors."],
        typeSpeed: 100,
        backSpeed: 40,
        loop: true
      });

      const introsplitTypes = document.querySelectorAll(".left-part h1");
      introsplitTypes.forEach((char) => {
        const i_text = new SplitType(char);
        gsap.to(i_text.chars, {
          y: 0,
          stagger: 0.08,
          duration: 0.3
        });
      });
    });
  })();
</script>

<BaseLayout seo={data.seo}>
	<main>
    <Container>
        <section class="info-section">
            <div class="left-part">
                <h1><span class="d-flex">we make</span> <span class="titletext"></span></h1>
                <p>We create classes every next month with our new talented creators</p>
                <a href="https://www.yudiz.com/" class="book-link">
                    <span class="linktext">Book Your Seat Now</span>
                    <span class="arrow">
                        <span></span>
                    </span>
                </a>
            </div>
            <div class="right-part" >
