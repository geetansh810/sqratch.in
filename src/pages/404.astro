---
import logo from "@/assets/global/navigation/Sqratch_logo.svg";
import { Image } from "astro:assets";
return Astro.redirect("/");
---
<div class="flex flex-col items-center justify-center h-screen">
    <Image
        src={logo}
        alt="404 Not Found"
        class="mt-8 max-w-md"
        loading="lazy"
    />
    <h1 class="text-4xl font-bold">404 - Page Not Found</h1>
    <p class="text-lg   ">The page you are looking for does not exist.</p>
    <p class="text-sm text-gray-500">Please check the URL or return to the <a href="/" class="text-blue-500 hover:underline">homepage</a>.</p>
    <style>
        .flex {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 80vh;
            margin-top: 5%;
        }
        .text-4xl {
            font-size: 2.25rem;
            font-weight: 700;
        }
        .text-lg {
            font-size: 1.125rem;
        }
        .text-sm {
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }
        .text-gray-500 {
            color: #6b7280;
        }
        .text-blue-500 {
            color: #3b82f6;
        }
        .hover\:underline:hover {
            text-decoration: underline;
        }
        .mt-8 {
            margin-top: 2rem;
        }
        .w-1/2 {
            width: 50%;
        }
        .max-w-md {
            max-width: 28rem;
        }
    </style>
</div>