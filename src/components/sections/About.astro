---
import { Image } from "astro:assets";
import about from "@/assets/pages/about/about.png";

const { title, subtitle, content } = Astro.props;
const aboutImage = "https://images.unsplash.com/photo-1728422185403-bd601397f30e?q=80&w=2934&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
---

<div class="items-center flex-col text-sm font-medium relative w-full pb-40">
	<div class="relative w-full h-[50em] overflow-hidden">
		<div
			class="items-center bottom-0 justify-center left-0 absolute top-0 flex w-full h-full overflow-hidden rounded-3xl"
		>
			<div
				class="items-center bottom-0 flex-col justify-center left-0 absolute top-0 flex w-full"
			>
				<Image
					src={aboutImage}
					alt="About"
					width="100"
					height="100"
					class="bottom-0 left-0 object-cover absolute top-0 align-middle inline-block w-full h-full max-w-full"
				/>
			</div>
		</div>
	</div>
	<div class="mt-16 font-semibold">
		<div
			class="auto-cols-fr grid-cols-1 lg:grid-cols-[.6fr_1fr] grid-rows-[auto] grid gap-[1.88rem]"
		>
			<div class="col-span-1 row-span-1 text-[2.50rem] leading-none">
				<div class="items-center flex"><div>{title}</div></div>
			</div>
			<div class="col-span-1 row-span-1 text-3xl">
				<p class="mb-3" set:html={subtitle} />
				<p set:html={content} />
			</div>
		</div>
	</div>
</div>
